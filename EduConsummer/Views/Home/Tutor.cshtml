    <script>
        function searchAndHighlight() {
            var searchText = document.getElementById('searchInput').value.trim().toLowerCase(); // Convert search text to lowercase
            if (searchText === '') return;

            var elements = document.getElementsByTagName('*');
            var found = false;

            for (var i = 0; i < elements.length; i++) {
                if (elements[i].innerText.toLowerCase().includes(searchText)) { // Convert element text to lowercase for comparison
                    var innerHTML = elements[i].innerHTML;
                    var regex = new RegExp(searchText, 'gi'); // Create regular expression with 'g' flag for global search and 'i' flag for case-insensitive search
                    elements[i].innerHTML = innerHTML.replace(regex, function (match) {
                        return '<span class="highlight">' + match + '</span>'; // Wrap matched text in a span with highlight class
                    });
                    elements[i].scrollIntoView({ behavior: 'smooth', block: 'center' });
                    found = true;
                    break;
                }
            }

            if (!found) {
                alert('Text not found on the page.');
            }
        }
    </script>

