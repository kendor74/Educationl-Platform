    <script>
        function filterTutors() {
            var input = document.getElementById('searchInput').value.toLowerCase();
            var subjectFilter = document.getElementById('subjectFilter').value.toLowerCase();
            var rateFilter = document.getElementById('rateFilter').value;
            var selectedDays = [];

            // Get the selected days
            var checkboxes = document.querySelectorAll('.day-checkbox');
            checkboxes.forEach(function (checkbox) {
                if (checkbox.checked) {
                    selectedDays.push(checkbox.id.replace('Checkbox', ''));
                }
            });

            var tutorCards = document.querySelectorAll('.tutor-card');

            tutorCards.forEach(function (card) {
                var tutorName = card.querySelector('.tutor-name').textContent.toLowerCase();
                var tutorSubject = card.querySelector('.tutor-subject').textContent.toLowerCase();
                var tutorDescription = card.querySelector('.tutor-description').textContent.toLowerCase();
                var tutorRate = parseInt(card.querySelector('h2').textContent.replace(/\D+/g, ''));

                var matchesInput = tutorName.includes(input) || tutorSubject.includes(input) || tutorDescription.includes(input);
                var matchesSubject = subjectFilter === '' || tutorSubject === subjectFilter;
                var matchesRate = rateFilter === '' || tutorRate === parseInt(rateFilter);
                var matchesDays = selectedDays.length === 0 || selectedDays.some(day => tutorDescription.includes(day));

                if (matchesInput && matchesSubject && matchesRate && matchesDays) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>

