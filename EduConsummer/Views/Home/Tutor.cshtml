    <script>
        // Wait for the DOM to be fully loaded
        window.onload = function () {
            // Get the values from the ViewBag
            var selectedField = '@ViewBag.field';
            var selectedRate = '@ViewBag.rate';
            var searchBar = '@ViewBag.search'
            // Find the dropdown elements
            var fieldDropdown = document.getElementById('FieldFilter');
            var rateDropdown = document.getElementById('RateFilter');
            var searchBarDom = document.getElementById('searchInput');
            // Set the selected option for the field dropdown
            if (selectedField) {
                // Loop through each option in the field dropdown
                for (var i = 0; i < fieldDropdown.options.length; i++) {
                    // Check if the option value matches the selectedField value
                    if (fieldDropdown.options[i].value === selectedField) {
                        // Set the 'selected' attribute for the matching option
                        fieldDropdown.options[i].selected = true;
                        // Exit the loop since we've found the matching option
                        break;
                    }
                }
            }

            if (searchBar) {
                searchBarDom.value = searchBar
            }


            // Set the selected option for the rate dropdown
            if (selectedRate) {
                // Loop through each option in the rate dropdown
                for (var j = 0; j < rateDropdown.options.length; j++) {
                    // Check if the option value matches the selectedRate value
                    if (rateDropdown.options[j].value === selectedRate) {
                        // Set the 'selected' attribute for the matching option
                        rateDropdown.options[j].selected = true;
                        // Exit the loop since we've found the matching option
                        break;
                    }
                }
            }
        };
    </script>

