@{
    Layout = "_Layout";
}

<head>
    <link rel="shortcut icon" href="~/templet/assets/images/pheniox-favicon-color.png" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let timeLeft = 10;
            const timerElement = document.querySelector('.text-muted.mb-0');
            const joinButton = document.getElementById('join-btn');

            function updateTimer() {
                if (timeLeft > 0) {
                    timeLeft--;
                    timerElement.textContent = 'Time Left : ' + timeLeft + ' sec';
                } else {
                    clearInterval(countdownInterval);
                    joinButton.style.pointerEvents = 'auto';
                    joinButton.classList.remove('btn-success');
                    joinButton.classList.add('btn-primary');
                }
            }

            const countdownInterval = setInterval(updateTimer, 1000);
        });
    </script>
</head>
<div class="content-wrapper" style="background:#262632">
    <div class="card-body" bis_skin_checked="1" style="margin-top:80px">
        <div class="row" bis_skin_checked="1">
            <div class="col-12" bis_skin_checked="1">
                <div class="preview-list" bis_skin_checked="1">
                    <div class="preview-item border-bottom" bis_skin_checked="1">
                        <div class="preview-thumbnail" bis_skin_checked="1">
                            <div class="preview-icon bg-info" bis_skin_checked="1">
                                <i class="mdi mdi-clock"></i>
                            </div>
                        </div>
                        <div class="preview-item-content d-sm-flex flex-grow" bis_skin_checked="1">
                            <div class="flex-grow" bis_skin_checked="1">
                                <h6 class="preview-subject">Live Streaming meeting</h6>
                                <p class="text-muted mb-0"></p>
                            </div>
                            <div class="mr-auto text-sm-right pt-2 pt-sm-0" bis_skin_checked="1">
                                <p class="text-muted">1 Hour Room</p>
                                <a class="nav-link btn btn-success create-new-button"
                                   id="join-btn"
                                   href="@Url.Action("LiveStream","Home")"
                                   style="margin-top:20px;pointer-events:none">Join Stream</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
