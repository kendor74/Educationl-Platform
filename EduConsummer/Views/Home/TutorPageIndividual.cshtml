@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutor Details</title>
    <style>
        .container {
            max-width: 800px;
            margin: 90px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        img {
            width: 100%;
            border-radius: 8px;
        }

        header {
            display: block;
            unicode-bidi: isolate;
        }

        .main-header {
            background-color: rgba(22, 34, 57, 0.95);
            height: 80px;
            position: fixed;
            z-index: 12;
            width: 100%;
            top: 0;
        }

        .start-chat {
            font-size: 14px;
            color: #777;
            margin-top: 10px;
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: rgba(22, 34, 57, 0.95);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }
    </style>
</head>
<body>
    <header class="main-header clearfix" role="header">
        <div class="logo">
            <!-- inserting logo  -->
            <a href="#">
                <img src="logo.png"
                     alt=""
                     style="width: 12%" />
            </a>
        </div>
    </header>

    <div class="container">
        <h1>Tutor Details</h1>
        <img id="img" />
        <div class="tutor-details">
            <h2 id="tutorName"></h2>
            <p id="tutorSubject"></p>
            <p id="tutorDescription"></p>
        </div>

        <button class="start-chat">Start Chat</button>
    </div>

    <script>
        // Parse URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const tutorName = urlParams.get("tutorName");
        const tutorSubject = urlParams.get("tutorSubject");
        const tutorDescription = urlParams.get("tutorDescription");
        const imgSrc = urlParams.get('img');
        // Set tutor details
        document.getElementById("img").innerText = document.getElementById(
            "tutorName"
        ).innerText = tutorName;
        document.getElementById("tutorSubject").innerText =
            "Subject: " + tutorSubject;
        document.getElementById("tutorDescription").innerText =
            "Description: " + tutorDescription;
        document.getElementById("img").src = imgSrc;
    </script>
</body>
</html>
