@model Tutor
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutor Details</title>
    <link rel="icon" type="image/x-icon" href="~/assets/images/title.ico" />
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f2f5;
            color: #333;
        }

        .container {
            max-width: 900px;
            margin: 120px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .container:hover {
                transform: translateY(-5px);
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            }

        img {
            width: 100%;
            border-radius: 8px;
            margin-bottom: 20px;
        }


        header {
            display: block;
            unicode-bidi: isolate;
        }

        .main-header {
            background-color: rgba(22, 34, 57, 0.95);
            height: 80px;
            position: fixed;
            z-index: 12;
            width: 100%;
            top: 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .tutor-details{
            margin-left:117px;
            width:75%;
        }
        .logo img {
            width: 10%;
        }

        .tutor-details h1, .tutor-details h2, .tutor-details p {
            margin: 10px 0;
        }

        .tutor-details h1 {
            font-size: 2.5em;
            margin-bottom: 20px;
            text-align: center;
            color: #162239;
        }

        .tutor-details h2 {
            font-size: 2em;
            color: #162239;
        }

        .tutor-details p {
            font-size: 1.2em;
            color: #555;
        }

        .start-chat, .make-payment {
            display: inline-block;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #162239;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s, transform 0.3s;
            margin-top: 20px;
        }

            .start-chat:hover, .make-payment:hover {
                background-color: #1a1f2b;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <header class="main-header clearfix" role="header">
        <div class="logo">
            <a href="~/Home/Index">
                <img src="/assets/images/logo.png" alt="Logo">
            </a>
        </div>
    </header>

    <div class="container">
        <div class="tutor-details">
            <h1>Tutor Details</h1>
            <img class="tutor" src="@Model.ImageSrc" alt="@Model.Name" />
            <h2>@Model.Name</h2>
            <p><strong>Field:</strong> @Model.Field</p>
            <p><strong>Description:</strong> @Model.Descrp</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <a href="@Url.Action("Chat", "Home")">
                <!--sending the Tutor id to the chat system-->
                <button class="start-chat">Start Chat</button>
            </a>
            <a href="https://buy.stripe.com/dR6eVt1k6bdv5Py8wS?rate=${@Model.Rate}&name=${@Model.Name}" >
                <button class="make-payment">Make Payment</button>
            </a>
        </div>
    </div>


</body>
</html>
