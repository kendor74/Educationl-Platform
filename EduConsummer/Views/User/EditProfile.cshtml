@model User
@{
    Layout = "_Layout";
}
<head>

    <link rel="stylesheet" href="~/css/profile.css" />
    <script>
        function previewImage(input) {
            var preview = document.getElementById('preview');
            var fileInput = input;

            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };

                reader.readAsDataURL(fileInput.files[0]);
            }
        }
    </script>
</head>
<div class="container emp-profile">
    <form>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">


                    <img id="preview" src="~/Register/image/icon-5359553_640.png" alt="image" />

                    @using(Html.BeginForm("UploadImage","User",FormMethod.Post,new {enctype="multipart/form-data"}))
                    {   
                        @Html.AntiForgeryToken()
                        <div class="file btn btn-lg btn-primary" style="cursor:pointer;">
                            Change Photo
                            <input type="file" name="ImageData" id="ImageData" onchange="previewImage(this);" style="cursor:pointer" />
                            <br />
                        </div>
                    }
                    

                    
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h1 style="color:#425cbb">
                        @Model.FirstName @Model.LastName
