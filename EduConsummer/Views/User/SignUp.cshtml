                        <div class="form-group">
                            <label for="email">Password :</label>
                            <input type="password" name="password" id="password" />
                        </div>
                        <div class="form-group">
                            <label for="email">Confirm Password :</label>
                            <input type="password" name="password" id="password" />
                        </div>
                        <div class="form-submit">
                            <input type="submit"
                                   value="Reset All"
                                   class="submit"
                                   name="reset"
                                   id="reset" />
                            <input type="submit"
                                   value="Submit"
                                   class="submit"
                                   name="submit"
                                   id="submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

